body {
  font-size: 18px;
  font-family: 'Mukta', sans-serif;
  margin-left: 15px;
  text-align: center;
}

nav {
  padding: 1px;
  margin: 0;
  background-color: #fff;
  text-align: center;
  font-weight: 500;
  font-size: 1.25em;
  border-bottom: 1px solid #404040;
}

nav ul {
  margin: auto;
  width: 100%;
  padding: 7px;
  background-color: #fff;
}

nav li {
  display: inline;
  padding: 6px 55px 6px 55px;
}

nav a {
  text-decoration: none;
  color: #595959;
}

nav a:hover {
  text-decoration: none;
  color: #000;
}

.data-table {
  width: 50%;
  margin: auto;
  padding: 5px;
  border-collapse: collapse;
}

.data-cell {
  padding: 10px 0;
  border-width: 2px 0;
  border-color: #000;
}

.header {
  text-align: center;
  font-family: 'Mukta', sans-serif;
  font-size: 3em;
  margin-top: 15px;
}

.welcome-img {
  display: block;
  margin-left: auto;
  margin-right: auto;
}

.welcome-links {
  text-align: center;
  padding: 20px;
  font-size: 24px;
}

.plants {
   display: flex;
   flex-wrap: wrap;
   justify-content: space-around;
 }

 #plant {
  /* text-align: center; */
  /* background-color: #f2f2f2; */
  padding: 40px;
  width: 150px;;
  height: 200px;
  list-style-type: none;
  text-align: center;
  border: 1px solid black;
  box-shadow: 2px 2px 10px grey;
}

.plants-image {
  height: 125px;
  width: 125px;
  border: 1px solid black;
}

.plant-name {
  padding-top: 5px;
}

.plant-nickname {
  color: #595959;
  font-size: 16px;
}

.category-list {
  list-style-type: none;
}
