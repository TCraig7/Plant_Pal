<%= form_for(@plant) do |f| %>
  <p>
    <%= f.label :species %><br />
    <%= f.text_field :species %>
  </p>
  <p>
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname %>
  </p>
  <p>
    <%= f.label :amount_of_water %><br />
    <%= f.text_area :amount_of_water %>
  </p>
  <p>
    <%= f.label :amount_of_sun %><br />
    <%= f.text_area :amount_of_sun %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
